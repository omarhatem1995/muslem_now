<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headerQuran"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="gone"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/headerNameQuran"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="gone"
            android:textSize="24sp"
            android:text="\u005C \u005E"
            android:fontFamily="@font/bsml"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@id/headerQuran"
            app:layout_constraintStart_toStartOf="@id/headerQuran"
            app:layout_constraintEnd_toEndOf="@id/headerQuran"/>


        <LinearLayout
            android:id="@+id/quranLine"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toBottomOf="@id/headerQuran"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>
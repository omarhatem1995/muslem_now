<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_pattern_all_screens"
    tools:context=".ui.sidemenu.RadioActivity">
    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@drawable/view_background_top_green_rounded"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:background="@drawable/background_pattern_small_green"
        app:layout_constraintTop_toTopOf="@id/imageBackground"
        app:layout_constraintBottom_toBottomOf="@id/imageBackground"
        app:layout_constraintStart_toStartOf="@id/imageBackground"
        app:layout_constraintEnd_toEndOf="@id/imageBackground" />

    <ImageView
        android:id="@+id/backArrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/headerTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/tajawalmedium"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageBackground" />

    <TextView
        android:id="@+id/headerTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listen_to_our_radio_channels"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/tajawalmedium"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTextView" />

    <ImageView
        android:id="@+id/radioImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radio"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageBackground"/>

    <ImageView
        android:id="@+id/radioElipseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_elipse"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/imageBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/radioWavesImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_waves"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radioElipseImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/radioPlayImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_play_vector"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radioWavesImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
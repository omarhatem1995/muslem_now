<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MuslemNow.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_background_buttons_green_gradient_rounded"
    android:theme="@style/Theme.MuslemNow.AppWidgetContainer">

    <ImageView
        android:id="@+id/ivQiblaCompass"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/compass"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/qiblahDirectionImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignStart="@id/ivQiblaCompass"
        android:layout_alignEnd="@id/ivQiblaCompass"
        android:layout_alignTop="@id/ivQiblaCompass"
        android:layout_alignBottom="@id/ivQiblaCompass" />

    <ImageView
        android:id="@+id/qiblahRefresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_refresh_icon"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@id/ivQiblaCompass"
        android:layout_alignStart="@id/qiblahDegree"/>

    <TextView
        android:id="@+id/qiblahDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:text="@string/qibla_according_to_your_location_in_degrees"
        android:layout_toEndOf="@id/ivQiblaCompass"
        android:layout_alignTop="@id/ivQiblaCompass"/>

    <TextView
        android:id="@+id/tvQiblahDegreesWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="0.00"
        android:gravity="center"
        android:fontFamily="@font/tajawalbold"
        android:layout_below="@id/qiblahDegree"
        android:layout_alignStart="@id/qiblahDegree"
        android:layout_alignEnd="@id/qiblahDegree"/>

</RelativeLayout>
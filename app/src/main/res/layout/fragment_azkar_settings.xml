<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="settings_azkar"
            type="com.myapplication.ui.settings.SettingsViewModel" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="4dp"
        tools:context=".ui.settings.AzkarSettingsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_background_pattern_all_screens">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/transGreenBackground2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:fontFamily="@font/tajawalmedium"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imageView1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/azkarSabahConstraint"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                android:background="@drawable/view_background_white_rounded"
                app:layout_constraintTop_toBottomOf="@id/imageView1">

                <TextView
                    android:id="@+id/azkarSabahAndMasaaTextViewAzkarSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/azkar_sabah"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tajawalmedium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <Switch
                    android:id="@+id/switchAzkarSabah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="0.1"
                    android:thumb="@drawable/thumb1"
                    android:track="@drawable/track1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/chooseTimeForAzkar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_azkar_alarm_timing"
                android:layout_marginStart="16dp"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/azkarSabahConstraint"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/azkarSabahConstraintTiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="20dp"
                android:elevation="8dp"
                android:background="@drawable/view_background_white_rounded"
                app:layout_constraintTop_toBottomOf="@id/chooseTimeForAzkar">

                <TextView
                    android:id="@+id/afterFajrWithHalfHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_fajr_with_half_an_hour"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <TextView
                    android:id="@+id/afterFajrWithHalfHourAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Fajr with half an hour At"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="12sp"
                    android:textColor="@color/textColorGrey"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/afterFajrWithHalfHour"/>


                <ImageView
                    android:id="@+id/afterFajrWithHalfHourImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/afterFajrWithHalfHour"
                    app:layout_constraintBottom_toBottomOf="@id/afterFajrWithHalfHourAt"/>

                <View
                    android:id="@+id/viewSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/afterFajrWithHalfHourAt" />
                <TextView
                    android:id="@+id/afterFajrWithHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_fajr_with_an_hour"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewSeparator"/>


                <TextView
                    android:id="@+id/afterFajrWithHourAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Fajr with half an hour At"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="12sp"
                    android:textColor="@color/textColorGrey"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/afterFajrWithHour"/>


                <ImageView
                    android:id="@+id/afterFajrWithHourImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/afterFajrWithHour"
                    app:layout_constraintBottom_toBottomOf="@id/afterFajrWithHourAt"/>

                <View
                    android:id="@+id/viewSeparator2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/afterFajrWithHourAt" />
                <TextView
                    android:id="@+id/afterFajrWithtwoHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_fajr_with_two_hours"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewSeparator2"/>


                <TextView
                    android:id="@+id/afterFajrWithtwoHoursAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Fajr with half an hour At"
                    android:fontFamily="@font/tajawalmedium"
                    android:textSize="12sp"
                    android:textColor="@color/textColorGrey"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/afterFajrWithtwoHours"/>


                <ImageView
                    android:id="@+id/afterFajrWithtwoHoursImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/afterFajrWithtwoHours"
                    app:layout_constraintBottom_toBottomOf="@id/afterFajrWithtwoHoursAt"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/azkarElMasaaConstraint"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:background="@drawable/view_background_white_rounded"
                app:layout_constraintTop_toBottomOf="@id/azkarSabahConstraintTiming">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/azkar_masaa"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tajawalmedium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <Switch
                    android:id="@+id/switchAzkarMasaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="0.1"
                    android:thumb="@drawable/thumb1"
                    android:track="@drawable/track1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/azkarElMasaaConstraintDummy"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:background="@color/appWhiteTrans"
                app:layout_constraintTop_toBottomOf="@id/azkarElMasaaConstraint">
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>